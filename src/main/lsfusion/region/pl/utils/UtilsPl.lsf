MODULE UtilsPl;

REQUIRE Utils;

NAMESPACE Utils;

liczbaNaSlowa (INTEGER i) = FORMULA TEXT 'liczba_na_slowa($1)';
liczbaNaSlowaZlote (NUMERIC n) = FORMULA TEXT 'liczba_na_slowa_zlote($1)';

currencySlownie (NUMERIC n, STRING currency)= 
    CONCAT ' ', liczbaNaSlowa(INTEGER(floor(n))), currency, (INTEGER((n - floor(n)) * 100) + '/100');
