// cash in
FORM cashIn
    PROPERTIES uuid = uid()
    
    OBJECTS i = IncomingPayment  
    PROPERTIES IN request type = 'cashIn'
    PROPERTIES IN request cashSum = amount(i)
;
cashIn(IncomingPayment i) {
