MODULE PartnerSales;

REQUIRE MasterData, Partner;

NAMESPACE MasterData;

isCustomer 'Покупатель' = DATA BOOLEAN (Partner);

isCustomer(Partner p) <- TRUE WHEN SET(p IS Partner);

EXTEND FORM partners
    PROPERTIES(p) isCustomer
;

EXTEND FORM partner 
    PROPERTIES(p) isCustomer
;

DESIGN partner {
    headerColumn3 {
        MOVE PROPERTY(isCustomer(p));   
    }
    tabs {
        NEW customer {
            showIf = isCustomer(p);
            caption = 'Продажи';
            NEW customerOptions;
        }
    }
}